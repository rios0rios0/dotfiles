# generate slug from CHEZMOI_DEVICE
slug=$(printf '%s' "$CHEZMOI_DEVICE" \
  | sed -e 's/^[[:space:]]*//' \
        -e 's/[[:space:]]*$//' \
        -e 's/[[:space:]]\+/-/g' \
  | tr '[:upper:]' '[:lower:]')

# collect only non-.pub identities
