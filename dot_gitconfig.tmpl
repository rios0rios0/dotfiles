{{ template "helpers" . }}

{{- /* Find the default SSH user info for this device */ -}}
{{- $defaultUsername := "" -}}
{{- $defaultUserEmail := "" -}}
{{- $defaultUserSigningkey := "" -}}

{{- define "ssh-default-handler" -}}
{{- $.defaultUsername = onepasswordRead (list "op://Private/" .sshEntry.value "/ssh username" | join "") "my" -}}
{{- $.defaultUserEmail = onepasswordRead (list "op://Private/" .sshEntry.value "/ssh email" | join "") "my" -}}
{{- $.defaultUserSigningkey = onepasswordRead (list "op://Private/" .sshEntry.value "/public key" | join "") "my" -}}
{{- $.found = true -}}
{{- end -}}

{{- $context := dict "defaultUsername" $defaultUsername "defaultUserEmail" $defaultUserEmail "defaultUserSigningkey" $defaultUserSigningkey "found" false -}}
{{- range (onepassword "Active SSHs" "personal" "my").fields -}}
  {{- if (eq .type "REFERENCE") -}}
    {{- $sshName := onepasswordRead (list "op://Private/" .value "/title" | join "") "my" | trim -}}
    {{- $parts := split "@" $sshName -}}
    {{- $device := index $parts "_0" -}}
    {{- $deviceName := template "helpers.deviceName" $ -}}
    {{- if eq $device $deviceName -}}
      {{- $context.defaultUsername = onepasswordRead (list "op://Private/" .value "/ssh username" | join "") "my" -}}
      {{- $context.defaultUserEmail = onepasswordRead (list "op://Private/" .value "/ssh email" | join "") "my" -}}
      {{- $context.defaultUserSigningkey = onepasswordRead (list "op://Private/" .value "/public key" | join "") "my" -}}
      {{- break -}}
    {{- end -}}
  {{- end -}}
{{- end -}}

# TODO: how to avoid repetition with templates?
# TODO: when the Windows username is different than WSL username, the 1Password path is different breaking the commit signing

{{- $username := template "helpers.username" . }}

[user]
	name = "{{ $context.defaultUsername }}"
	email = "{{ $context.defaultUserEmail }}"
	signingkey = "{{ $context.defaultUserSigningkey }}"
[gpg]
	format = ssh
[gpg "ssh"]

{{- if eq .chezmoi.os "windows" }}
	program = "C:/Users/{{ $username }}/AppData/Local/1Password/app/8/op-ssh-sign.exe"
	allowedSignersFile = "C:/Users/{{ $username }}/.ssh/allowed_signers"
{{- else }}
	program = "/mnt/c/Users/{{ $username }}/AppData/Local/1Password/app/8/op-ssh-sign-wsl"
	allowedSignersFile = "/home/{{ $username }}/.ssh/allowed_signers"
{{- end }}

[commit]
	gpgsign = true
[tag]
	forceSignAnnotated = true
[alias]
	pom = push origin main -u
	cim = "!f() { git commit -m \"$*\"; }; f"
	ci = commit
	co = checkout
	cm = checkout main
	cb = checkout -b
	st = status -sb
	sf = show --name-only
	lg = log --pretty=format:'%Cred%h%Creset %C(bold)%cr%Creset %Cgreen<%an>%Creset %s' --max-count=30
	incoming = !(git fetch --quiet && git log --pretty=format:'%C(yellow)%h %C(white)- %C(red)%an %C(white)- %C(cyan)%d%Creset %s %C(white)- %ar%Creset' ..@{u})
	outgoing = !(git fetch --quiet && git log --pretty=format:'%C(yellow)%h %C(white)- %C(red)%an %C(white)- %C(cyan)%d%Creset %s %C(white)- %ar%Creset' @{u}..)
	unstage = reset HEAD --
	undo = checkout --
	rollback = reset --soft HEAD~1

	# gpg signing
{{- define "gpg-entry-handler" -}}
{{- $gpgAlias := onepasswordRead (list "op://Private/" .gpgEntry.value "/gpg alias" | join "") "my" -}}
{{- $gpgUsername := onepasswordRead (list "op://Private/" .gpgEntry.value "/gpg username" | join "") "my" -}}
{{- $gpgEmail := onepasswordRead (list "op://Private/" .gpgEntry.value "/gpg email" | join "") "my" -}}
{{- $gpgFingerprint := onepasswordRead (list "op://Private/" .gpgEntry.value "/fingerprint" | join "") "my" }}

	gpg{{ $gpgAlias }} = !(git config user.name '{{ $gpgUsername }}' && git config user.email '{{ $gpgEmail }}' && git config --replace-all user.signingkey {{ $gpgFingerprint }} && git config gpg.format openpgp)

{{- end -}}
{{- template "helpers.gpgEntries" . }}

	# ssh signing
{{- define "ssh-entry-handler" -}}
{{- $sshAlias := onepasswordRead (list "op://Private/" .sshEntry.value "/ssh alias" | join "") "my" -}}
{{- $sshUsername := onepasswordRead (list "op://Private/" .sshEntry.value "/ssh username" | join "") "my" -}}
{{- $sshEmail := onepasswordRead (list "op://Private/" .sshEntry.value "/ssh email" | join "") "my" -}}
{{- $sshPublicKey := onepasswordRead (list "op://Private/" .sshEntry.value "/public key" | join "") "my" }}

	ssh{{ $sshAlias }} = !(git config user.name '{{ $sshUsername }}' && git config user.email '{{ $sshEmail }}' && git config --replace-all user.signingkey '{{ $sshPublicKey }}' && git config gpg.format ssh)

{{- end -}}
{{- template "helpers.sshEntries" . }}

[core]
	autocrlf = input
	editor = vim

{{- if eq .chezmoi.os "windows" }}
	excludesfile = "C:/Users/{{ $username }}/.gitignore"
	sshCommand = "C:/Windows/System32/OpenSSH/ssh.exe"
{{- else }}
	excludesfile = "/home/{{ $username }}/.gitignore"
	sshCommand = ssh.exe
{{- end }}

[merge]
    commit = yes
    ff = yes
[push]
    autoSetupRemote = true

